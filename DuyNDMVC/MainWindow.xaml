<Window x:Class="DuyNDMVC.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="250" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="Email:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="39,40,0,0" RenderTransformOrigin="-0.052,0.566"/>
        <TextBox x:Name="txtEmail" Width="250" Height="25" Margin="100,40,0,169" HorizontalAlignment="Left"/>

        <TextBlock Text="Password:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="39,101,0,0"/>
        <PasswordBox x:Name="txtPassword" Width="250" Height="25" Margin="100,101,0,108" HorizontalAlignment="Left"/>

        <Button Content="Login" Width="100" Height="30" Margin="133,165,167,39" Click="BtnLogin_Click"/>
    </Grid>
</Window>
