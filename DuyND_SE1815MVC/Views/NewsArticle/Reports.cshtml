@model IEnumerable<DuyND_SE1815_Data.Entities.NewsArticle>

@{
    ViewData["Title"] = "Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary"><i class="fa-solid fa-chart-line"></i> Reports</h2>

    <!-- Form chọn ngày -->
    <form method="post" action="@Url.Action("Reports", "NewsArticle")" class="row g-3 mt-3">
        <div class="col-md-4">
            <label for="startDate" class="form-label"><i class="fa-solid fa-calendar-day"></i> Start Date:</label>
            <input type="date" name="startDate" class="form-control" required />
        </div>
        <div class="col-md-4">
            <label for="endDate" class="form-label"><i class="fa-solid fa-calendar-day"></i> End Date:</label>
            <input type="date" name="endDate" class="form-control" required />
        </div>
        <div class="col-md-4 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">
                <i class="fa-solid fa-file-alt"></i> Generate Report
            </button>
        </div>
    </form>

    <!-- Hiển thị bảng dữ liệu -->
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive mt-4">
            <table class="table table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th><i class="fa-solid fa-newspaper"></i> Title</th>
                        <th><i class="fa-solid fa-clock"></i> Created Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var news in Model)
                    {
                        <tr>
                            <td>@news.NewsTitle</td>
                            <td>@news.CreatedDate?.ToString("yyyy-MM-dd HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning mt-4">
            <i class="fa-solid fa-exclamation-circle"></i> No reports available.
        </div>
    }
</div>
