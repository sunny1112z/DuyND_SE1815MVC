@model DuyND_SE1815_Data.Entities.NewsArticle

@{
    ViewData["Title"] = "Create News";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary"><i class="fa-solid fa-newspaper"></i> Create News</h2>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" method="post" class="shadow p-4 bg-light rounded">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Tiêu đề -->
                <div class="mb-3">
                    <label asp-for="NewsTitle" class="form-label fw-bold"><i class="fa-solid fa-heading"></i> Title</label>
                    <input asp-for="NewsTitle" class="form-control" placeholder="Enter news title..." required />
                    <span asp-validation-for="NewsTitle" class="text-danger"></span>
                </div>

                <!-- Headline -->
                <div class="mb-3">
                    <label asp-for="Headline" class="form-label fw-bold"><i class="fa-solid fa-pen"></i> Headline</label>
                    <input asp-for="Headline" class="form-control" placeholder="Enter headline..." required />
                    <span asp-validation-for="Headline" class="text-danger"></span>
                </div>

                <!-- Nội dung -->
                <div class="mb-3">
                    <label asp-for="NewsContent" class="form-label fw-bold"><i class="fa-solid fa-file-alt"></i> Content</label>
                    <textarea asp-for="NewsContent" class="form-control" rows="4" placeholder="Enter news content..." required></textarea>
                    <span asp-validation-for="NewsContent" class="text-danger"></span>
                </div>

                <!-- Nguồn -->
                <div class="mb-3">
                    <label asp-for="NewsSource" class="form-label fw-bold"><i class="fa-solid fa-link"></i> Source</label>
                    <input asp-for="NewsSource" class="form-control" placeholder="Enter news source..." />
                    <span asp-validation-for="NewsSource" class="text-danger"></span>
                </div>

                <!-- Ngày tạo -->
                <div class="mb-3">
                    <label asp-for="CreatedDate" class="form-label fw-bold"><i class="fa-solid fa-calendar"></i> Created Date</label>
                    <input asp-for="CreatedDate" type="date" class="form-control" required />
                    <span asp-validation-for="CreatedDate" class="text-danger"></span>
                </div>

                <!-- Danh mục -->
                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label fw-bold"><i class="fa-solid fa-list"></i> Category</label>
                    <input asp-for="CategoryId" class="form-control" value="1" />
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <!-- Trạng thái -->
                <div class="mb-3">
                    <label asp-for="NewsStatus" class="form-label fw-bold"><i class="fa-solid fa-toggle-on"></i> Status</label>
                    <select asp-for="NewsStatus" class="form-select">
                        <option value="true">Active</option>
                        <option value="false">Inactive</option>
                    </select>
                    <span asp-validation-for="NewsStatus" class="text-danger"></span>
                </div>

                <!-- Chọn giảng viên -->
                <div class="mb-3">
                    <label asp-for="CreatedById" class="form-label fw-bold"><i class="fa-solid fa-user"></i> Lecturer</label>
                    <select asp-for="CreatedById" class="form-control" asp-items="@(ViewData["Lecturers"] as List<SelectListItem>)">
                        <option value="">-- Select Lecturer --</option>
                    </select>

                    <span asp-validation-for="CreatedById" class="text-danger"></span>
                </div>

                <!-- Nút Submit -->
                <div class="d-flex justify-content-between">
                    <a asp-action="Manage" class="btn btn-outline-secondary"><i class="fa-solid fa-arrow-left"></i> Back</a>
                    <button type="submit" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
