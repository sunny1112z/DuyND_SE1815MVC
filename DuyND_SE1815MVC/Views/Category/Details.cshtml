@model DuyND_SE1815_Data.Entities.Category

@{
    ViewData["Title"] = "Category Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="text-primary text-center mb-4">
        <i class="bi bi-info-circle"></i> Category Details
    </h1>

    <div class="card shadow-lg">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">Category Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold"><i class="bi bi-tag"></i> Category Name:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CategoryName)</dd>

                <dt class="col-sm-3 fw-bold"><i class="bi bi-file-text"></i> Description:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CategoryDesciption)</dd>

                <dt class="col-sm-3 fw-bold"><i class="bi bi-check-circle"></i> Status:</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.IsActive == true? "bg-success" : "bg-danger")">
                        @(Model.IsActive == true ? "Active" : "Inactive")
                    </span>
                </dd>

                <dt class="col-sm-3 fw-bold"><i class="bi bi-box"></i> Parent Category:</dt>
                <dd class="col-sm-9">
                    @(Model.ParentCategory != null ? Model.ParentCategory.CategoryDesciption : "None")
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a asp-action="Edit" asp-route-id="@Model?.CategoryId" class="btn btn-warning shadow">
            <i class="bi bi-pencil-square"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary shadow">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>
</div>
