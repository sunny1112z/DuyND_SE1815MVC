@model DuyND_SE1815_Data.Entities.SystemAccount

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Create System Account</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3" hidden>
                            <label asp-for="AccountId" class="form-label"></label>
                            <input asp-for="AccountId" class="form-control" value="1" />
                            <span asp-validation-for="AccountId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AccountName" class="form-label fw-bold"></label>
                            <input asp-for="AccountName" class="form-control" placeholder="Enter name" />
                            <span asp-validation-for="AccountName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AccountEmail" class="form-label fw-bold"></label>
                            <input asp-for="AccountEmail" class="form-control" placeholder="Enter email" />
                            <span asp-validation-for="AccountEmail" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AccountRole" class="form-label fw-bold"></label>
                            <select asp-for="AccountRole" class="form-select">
                                <option value="0">Admin</option>
                                <option value="1">Staff</option>
                                <option value="2">Lecturer</option>
                            </select>
                            <span asp-validation-for="AccountRole" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AccountPassword" class="form-label fw-bold"></label>
                            <input asp-for="AccountPassword" type="password" class="form-control" placeholder="Enter password" />
                            <span asp-validation-for="AccountPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IsActive" class="form-label fw-bold"></label>
                            <select asp-for="IsActive" class="form-select">
                                <option value="1">Active</option>
                                <option value="0">Inactive</option>
                            </select>
                            <span asp-validation-for="IsActive" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg shadow-sm">Create</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
